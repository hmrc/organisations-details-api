{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Self Assessment",
  "type": "object",
  "properties": {
    "selfAssessmentStartDate": {
      "type": "string",
      "id": "full-date",
      "example": "2015-04-21"
    },
    "taxSolvencyStatus": {
      "type": "string",
      "description": "The tax solvency status. I – Insolvent S – Solvent",
      "example": "I"
    },
    "returns": {
      "type": "array",
      "description": "Tax returns",
      "items": {
        "type": "object",
        "properties": {
          "totalBusinessSalesTurnover": {
            "type": "number",
            "description": "Total Business sales turnover in range of -99999999999.99 to 99999999999.99",
            "example": "1234.56"
          },
          "taxYear": {
            "type": "string",
            "id": "tax-year",
            "example": "2020-21"
          }
        },
        "required": [
          "totalBusinessSalesTurnover",
          "taxYear"
        ]
      }
    }
  },
  "required": [
    "selfAssessmentStartDate",
    "taxSolvencyStatus",
    "returns"
  ]
}