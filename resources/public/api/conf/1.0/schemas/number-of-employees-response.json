{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Number of employees response",
  "type": "object",
  "properties": {
    "payeReference": {
      "description": "The organisation's PAYE reference consisting of districtNumber and schemeReference",
      "type": "string",
      "pattern": "^[a-zA-Z0-9]{1,10}[\\/][0-9]{3}$",
      "example": "RT882d/456"
    },
    "counts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "numberOfEmployees": {
            "type": "integer",
            "example": "1234",
            "description": "Minimum of 1, maximum of 99999999, multiple of 1"
          },
          "dateOfCount": {
            "type": "string",
            "example": "2019-03",
            "pattern": "^[1-2][0-9]{3}-[0-9]{2}$"
          }
        }
      }
    }
  },
  "required": ["payeReference", "counts"]
}